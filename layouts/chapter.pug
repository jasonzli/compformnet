doctype html
html(lang="en")
	head
		title= title + " | Comp Form"
		
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-41378785-2")
		script
			| window.dataLayer = window.dataLayer || [];
			| function gtag(){dataLayer.push(arguments);}
			| gtag('js', new Date());
			| gtag('config', 'UA-41378785-2');


		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1")
		
		// open graph
		meta(property="og:site_name" content="compform.net")
		meta(property="og:title" content=title)
		meta(property="og:description" content=description)
		meta(property="og:image" content=image)
		meta(name="twitter:card" content="summary_large_image")


		link(rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32")
		link(rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16")

		// jquery 
		script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js",  crossorigin="anonymous")
		
		// bootstrap 
		script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js",crossorigin="anonymous")
		link(rel="stylesheet", href="/vendor/bootstrap/css/bootstrap.min.css",  crossorigin="anonymous")
		script(src="/vendor/bootstrap/js/bootstrap.min.js", crossorigin="anonymous")
		
		// font awesome
		link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css")
		
		// syntax hilighting
		link(rel="stylesheet", href="/vendor/highlightjs/css/atom-one-dark.css")
		
		// styles
		link(rel="stylesheet", href="/style.css")
		
		//scripts
		script(src="/main.js")
		
		

	body.comp-form(class= debug?"debug":"")
		
		#logo
			a(href="/")
				include ./_logo.svg
				
		if header_title
			header#top-nav.container
				.row.justify-content-md-center
					.col-md-8
						span.title
							!= header_title
						.buttons
							if previous
								a.previous(href=previous_url)
									i.fa.fa-caret-left.fa-lg
									!= previous

							if next
								a.next(href=next_url)
									!= next
									i.fa.fa-caret-right.fa-lg
		#content
			if hero_title
				#hero.container
					.row.justify-content-md-center
						.col-md-8
							h1= hero_title
							h6 Overview
							p.description !{description}
							h6 Tools
							p.software #{software}
				
			#copy.container
				.row.justify-content-md-center
					.col-md-8.comp-form-copy
						!=contents
			
			#scroll-out.container
		
		